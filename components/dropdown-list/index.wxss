/* components/dropdown-list/index.wxss */

.dropdown-container {
    position: relative;
    background: #fff;
}

.dropdown {
    padding: 0 10px;
    line-height: 35px;
    text-align: center;
    font-size: 14px;
    border-bottom: 1px solid #ddd;
}

.dropdown-list-mask {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    min-height: 80vh;
    background: rgba(0, 0, 0, .6);
}
.dropdown-list {
    padding: 30rpx;
    background: #fff;
}

.dropdown-list-item {
    display: inline-block;
    margin-right: 3%;
    padding: 0 10rpx;
    font-size: 12px;
    border: 1px solid #ddd;
}
.dropdown-list-item.active {
    color: red;
}